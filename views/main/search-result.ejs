<% layout('layout') -%>

<% if(data.length === 0) {%>

    <h1 style = "color: skyblue; text-align: center;font-size:80px;">Search Not Found</h1>
<%} else {%>

    <div class = "text-center" style="padding-bottom: 1cm">
      <h1 style = "font-size:40px" class="label label-success" >Results for <%= query %> </h1>
    </div>
  <div class="container">


  <div class="row">
    <!-- _source is by elastic Search when it replicates -->
    <% for(var i = 0; i < data.length; i++){ %>
      <div class="col-lg-4 col-sm-6">
        <a href="/product/<%= data[i]._source._id %>">
          <div style = "border: groove; color:grey;border-radius: 10px" class="thumbnail">
            <img  src="<%= data[i]._source.image %>" alt="Product Image">
            <div class="caption">
              <h3> <%= data[i]._source.name %> </h3>
              <p> <%= data[i]._source.category.name %> </p>
              <p>$<%= data[i]._source.price %> </p>
            </div>
          </div>
        </a>
      </div>
    <%}%>
  </div>
  </div>
<%}%>
